{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "exclude": {
      "default": ["**/node_modules/**", "**/.git/**", "**/dist/**"],
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "include": {
      "description": "Glob patterns for source files to scan.",
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "output": {
      "additionalProperties": false,
      "properties": {
        "adapter": {
          "default": "markdown",
          "enum": ["docusaurus", "gitbook", "fumadocs", "markdown", "json"],
          "title": "AdapterType",
          "type": "string"
        },
        "clean": {
          "type": "boolean"
        },
        "dir": {
          "type": "string"
        },
        "sitemap": {
          "type": "boolean"
        }
      },
      "required": [],
      "title": "OutputConfig",
      "type": "object"
    },
    "parsing": {
      "additionalProperties": false,
      "properties": {
        "commentTokens": {
          "additionalProperties": {
            "type": "string"
          },
          "default": {},
          "properties": {},
          "required": [],
          "type": "object"
        },
        "includeMarkdown": {
          "type": "boolean"
        },
        "interpolation": {
          "additionalItems": false,
          "default": ["{{", "}}"],
          "items": [
            {
              "type": "string"
            },
            {
              "type": "string"
            }
          ],
          "minItems": 2,
          "type": "array"
        },
        "languageMap": {
          "additionalProperties": {
            "enum": [
              "solidity",
              "rust",
              "typescript",
              "python",
              "go",
              "plaintext",
              "markdown",
              "javascript",
              "yaml",
              "json"
            ],
            "title": "SupportedLanguage",
            "type": "string"
          },
          "default": {},
          "properties": {},
          "required": [],
          "type": "object"
        }
      },
      "required": [],
      "title": "ParsingConfig",
      "type": "object"
    },
    "plugins": {
      "items": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string"
              },
              "options": {
                "additionalProperties": {
                  "$id": "/schemas/any",
                  "title": "any"
                },
                "properties": {},
                "required": [],
                "type": "object"
              }
            },
            "required": ["name"],
            "type": "object"
          }
        ]
      },
      "type": "array"
    },
    "project": {
      "additionalProperties": false,
      "properties": {
        "branch": {
          "default": "main",
          "type": "string"
        },
        "name": {
          "default": "Documentation",
          "type": "string"
        },
        "repository": {
          "default": "https://github.com/envoy1084/sourcedocs",
          "description": "a string matching the pattern ^https?:\\/\\/(?:www\\.)?[-a-zA-Z0-9@:%._+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}\\b(?:[-a-zA-Z0-9()@:%_+.~#?&/=]*)$",
          "pattern": "^https?:\\/\\/(?:www\\.)?[-a-zA-Z0-9@:%._+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}\\b(?:[-a-zA-Z0-9()@:%_+.~#?&/=]*)$",
          "title": "Repository",
          "type": "string"
        }
      },
      "required": [],
      "title": "ProjectConfig",
      "type": "object"
    },
    "root": {
      "description": "Root directory for resolving paths. Defaults to CWD.",
      "type": "string"
    },
    "validation": {
      "additionalProperties": false,
      "properties": {
        "brokenLinks": {
          "default": "strict",
          "enum": ["strict", "warn", "ignore"],
          "title": "ValidationMode",
          "type": "string"
        },
        "duplicateIds": {
          "default": "strict",
          "enum": ["strict", "warn", "ignore"],
          "title": "ValidationMode",
          "type": "string"
        },
        "emptyChapters": {
          "default": "warn",
          "enum": ["strict", "warn", "ignore"],
          "title": "ValidationMode",
          "type": "string"
        },
        "unparsedFiles": {
          "default": "ignore",
          "enum": ["strict", "warn", "ignore"],
          "title": "ValidationMode",
          "type": "string"
        }
      },
      "required": [],
      "title": "ValidationConfig",
      "type": "object"
    }
  },
  "required": [],
  "title": "SourceDocsConfig",
  "type": "object"
}
